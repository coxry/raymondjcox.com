<!doctype html>
<html>
  <head>
    <%= stylesheet_link_tag 'all', media: "all" %>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="author" content="Raymond Cox" />
    <meta name="og:site_name" content="Raymond Cox" />
    <meta name="og:type"content="blog"  />
    <meta name="description" content="Raymond Cox is a software engineer living in the Boston area. Read insightful development blog posts about Javascript, Ember and other topics.">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Lora" rel="stylesheet">
    <title>Raymond Cox<%= ' - ' + current_page.data.title unless current_page.data.title.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-43114221-2', 'auto');
      ga('send', 'pageview');

    </script>
  </head>
  <body>
    <%= partial('partials/navigation', locals: { class_names: ['mobile-nav', 'hide-nav', 'nav', 'text-center', 'nav-stacked', 'hidden-sm', 'hidden-md', 'hidden-lg'] }) %>
    <div class="container">
      <div class="col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-0 col-lg-11">
        <div class="row">
            <div class="col-md-10 col-sm-10 pull-left header-container">
              <% link_to 'https://raymondjcox.com' do %>
                <%= image_tag 'images/face.png', class: "img-circle pull-left face hidden-xs" %>
              <% end %>
              <h1 class="main-header">Raymond Cox</h1>
              <h6 class="sub-header">Boston Software Engineer</h6>
            </div>

            <div class="col-xs-2 pull-right text-right hidden-sm hidden-md hidden-lg" style="margin-top:1.75em; padding-right: 0;">
              <button class="btn btn-default mobile-hamburger">
                <div class="bar first"></div>
                <div class="bar"></div>
                <div class="bar"></div>
              </button>
            </div>

            <%= partial('partials/social_icons', locals: { class_names: ['col-md-2', 'col-sm-2', 'hidden-xs', 'text-right'] }) %>
        </div>
        <div class="row">
          <hr></hr>
        </div>
        <div class="row">
          <%= partial('partials/navigation', locals: { class_names: ['list-inline', 'top-nav', 'hidden-xs'] }) %>
        </div>
        <div class="row">
          <%= yield %>
        </div>
      </div>
      <div class="row">
        <footer class="site-footer">
          &copy; 2015-2017 Raymond Cox
        </footer>
      </div>
    </div>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'fastclick' %>
  </body>
</html>
